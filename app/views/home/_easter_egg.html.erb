<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready( function(){
      $("body").toasty({
        image: "<%= asset_path('assets/toasty.png') %>",
        sound: "<%= asset_path('assets/toasty.mp3') %>"
      });

      var secret_stuff = new Konami();
      secret_stuff.code = function() { $("body").toasty('pop'); }
      secret_stuff.load();
      });

     $("#toasty-button").click( function(){
        $("body").toasty('pop');
      });
  <% end %>
<% end %>