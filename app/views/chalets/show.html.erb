
<% content_for(:after_js) %>


<div class="chalet-name text-right">
  <h2><%= @chalet.title %> </h1>
  <h3> <%= @chalet.city %> </h2>
</div>

<% if @chalet.chalet_pictures.any? %>
  <div class="centered-carousel">
    <div class="owl-carousel">
      <% @chalet.chalet_pictures.each do |pic| %>
        <div> <%= image_tag pic.picture.url(:cover) %> </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="booking">
  <%= link_to "Book this chalet", new_chalet_booking_path(@chalet), class: "btn btn-success btn-lg" %>
</div>


<div class="container" id="chalet-show">
  <div class="row">
    <div class="col-xs-12 col-md-6" id="owner">
      <div class="float-left">
        <h3>Chalet owner</h3>
        <%= image_tag @user.picture, class: "picture-owner" %>
      </div>
      <div class="float-right">
        <%= link_to @user.first_name, user_path(@user) %>
        <p> Email: <%= @user.email %> </p>
      </div>
      <div class="clear"></div>
    </div>


    <div class="col-xs-12 col-md-3" id="guests">
      <h3> Sleeping places</h3>
      <p> <%= @chalet.max_nb_of_guests %> </p>
    </div>

    <div class="col-xs-12 col-md-3" id="price">
      <h3> Daily price </h3>
      <p> <%= @chalet.daily_price %> </p>
    </div>

    <div class="col-xs-12 col-md-6" id="description">
      <h1>Chalet Description</h3>
      <p> <%= @chalet.description %> </p>
    </div>
  </div>
</div>